@{      
    ViewData["Title"] = "Cálculos";
}

<div class="text-center" method="post">
    <h1>Calculos</h1>
    <form action="/calculos/sumar">
        <div class=" form-group">
            <input type="number" name="primerNumero" class="form-control" placeholder="Ingrese un número." />
        </div>
        <div class=" form-group">
            <input type="number" name="segundoNumero" class="form-control" placeholder="Ingrese el segundo número." />
        </div>
        <div>
            <button type="submit" class="btn btn-primary" value="Calcular">Sumar</button>
        </div>
        <br />
    </form>

    <form action="/calculos/restar">
        <div class=" form-group">
            <input type="number" name="primerNumero" class="form-control" placeholder="Ingrese un número." />
        </div>
        <div class=" form-group">
            <input type="number" name="segundoNumero" class="form-control" placeholder="Ingrese el segundo número." />
        </div>
        <div>
            <button type="submit" class="btn btn-primary" value="Calcular">Restar</button>
        </div>
        <br />
    </form>

    <form action="/calculos/multiplicar">
        <div class=" form-group">
            <input type="number" name="primerNumero" class="form-control" placeholder="Ingrese un número." />
        </div>
        <div class=" form-group">
            <input type="number" name="segundoNumero" class="form-control" placeholder="Ingrese el segundo número." />
        </div>
        <div>
            <button type="submit" class="btn btn-primary" value="Calcular">Multiplicar</button>
        </div>
        <br />
    </form>

    <form action="/calculos/dividir">
        <div class=" form-group">
            <input type="number" name="primerNumero" class="form-control" placeholder="Ingrese un número." />
        </div>
        <div class=" form-group">
            <input type="number" name="segundoNumero" class="form-control" placeholder="Ingrese el segundo número." />
        </div>
        <div>
            <button type="submit" class="btn btn-primary" value="Calcular">Dividir</button>
        </div>
    </form>  
</div>
